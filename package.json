{
  "name": "bridge-client",
  "version": "0.0.1",
  "description": "Bridge web client",
  "scripts": {
    "start": "gulp",
    "build:extension": "npm run style && BABEL_ENV=production gulp build:extension",
    "clean": "rm -rf build src/browser/extension/manifest.json src/app/config/config.js",
    "dev": "gulp dev",
    "style": "mkdir -p build/extension/css 2>/dev/null && node-sass src/app/styles/stylesheet.scss --output-style=compressed | postcss --use autoprefixer -o build/extension/css/stylesheet.css && cp -r src/app/styles/images build/extension/",
    "release:extension": "rm -rf releases/* && npm run style && rm -f config.json && cp config.json.edge config.json && BABEL_ENV=production gulp build:extension && zip -r releases/bridge-edge.zip build/extension && cp config.json.live config.json && BABEL_ENV=production gulp build:extension && zip -r releases/bridge-live.zip build/extension && cp config.json.example config.json && BABEL_ENV=production gulp build:extension",
    "publish:extension": "rm -f config.json && cp config.json.edge config.json && ./scripts/chrome-store.sh && cp config.json.live config.json && ./scripts/chrome-store.sh && cp config.json.example config.json",
    "test": "cd test && bundle install && rspec && cd .."
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/meedan/bridge-client"
  },
  "homepage": "https://github.com/meedan/bridge-client",
  "keywords": [
    "react",
    "reactjs",
    "boilerplate",
    "hot",
    "live",
    "edit",
    "webpack",
    "flux",
    "redux",
    "firefox",
    "safari",
    "chrome",
    "app",
    "extension"
  ],
  "authors": [
    "Meedan <sysops@meedan.com> (https://github.com/meedan)"
  ],
  "license": "MIT",
  "devDependencies": {
    "babel": "^5.8.23",
    "babel-core": "^5.8.25",
    "babel-eslint": "^4.1.3",
    "babel-loader": "^5.3.2",
    "babel-plugin-react-transform": "^1.1.1",
    "chromedriver": "^2.19.0",
    "eslint": "^1.7.1",
    "eslint-config-airbnb": "^0.1.0",
    "eslint-plugin-react": "^3.2.3",
    "expect": "^1.12.2",
    "gulp": "^3.9.0",
    "gulp-jade": "1.1.0",
    "gulp-rename": "^1.2.2",
    "gulp-replace": "^0.5.4",
    "gulp-util": "^3.0.6",
    "gulp-zip": "^3.0.2",
    "html-webpack-plugin": "^1.6.2",
    "legit-tests": "^0.6.1",
    "mocha": "^2.3.3",
    "raw-loader": "^0.5.1",
    "react-transform-catch-errors": "^1.0.0",
    "react-transform-hmr": "^1.0.1",
    "redbox-react": "^1.0.1",
    "redux-devtools": "^3.0.0-beta-3",
    "redux-devtools-dock-monitor": "^1.0.0-beta-3",
    "redux-devtools-log-monitor": "^1.0.0-beta-3",
    "redux-immutable-state-invariant": "^1.1.0",
    "redux-logger": "^2.0.4",
    "selenium-webdriver": "^2.48.0",
    "style-loader": "^0.12.4",
    "webpack": "^1.12.2",
    "webpack-dev-server": "^1.12.1"
  },
  "dependencies": {
    "autoprefixer": "^6.1.1",
    "chrome-storage-local": "^0.1.1",
    "crossmessaging": "0.1.1",
    "gulp-bump": "^1.0.0",
    "http": "0.0.0",
    "node-sass": "^3.4.2",
    "postcss-cli": "^2.3.2",
    "react": "^0.14.0",
    "react-dom": "^0.14.0",
    "react-fontawesome": "^1.1.0",
    "react-redux": "^4.0.0",
    "react-select": "^0.9.1",
    "redux": "^3.0.0",
    "redux-form": "^3.1.0",
    "redux-notify": "^0.1.1",
    "redux-persist": "^1.4.1",
    "redux-thunk": "^1.0.0",
    "scriptjs": "^2.5.8",
    "superagent": "^1.4.0",
    "util": "^0.10.3"
  }
}
